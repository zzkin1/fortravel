<!doctype html>
<html lang="en">
 <head>
  <meta charset="UTF-8">
  <title>Document</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<style type="txt/css">
</style>
<script>
$(document).ready(function(){
	$("#showImage").hide();
	$('#product img').mouseover(function(){
		$("#showImage").show();
		var imgSrc="";
		imgSrc=$(this).attr("src");
		imgSrc="<img src='"+imgSrc+"'/>";		
		$("#showImage").html(imgSrc);
		});
		$('#product img').mouseout(function(){
			$("#showImage").hide();
		});
 });
</script>
 </head>
 <body>
  <div id="product">
  <img src="img/banner5.jpg" width="100">
  <img src="img/banner6.jpg" width="100">
  <img src="img/banner7.jpg" width="100">
 <div id="showImage" style="border:1px solid red; width:400px; height:300px;">
 </div>
 </div>
 </body>
</html>
